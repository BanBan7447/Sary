<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragPage_ThongKeDoanhThu"
    android:padding="20dp"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bắt đầu từ"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/DateStar_DoanhThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:hint="Chọn ngày bắt đầu"
        android:inputType="date"
        android:textStyle="bold"
        android:background="@drawable/radius_shape_15"
        android:backgroundTint="@color/DrakWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Bắt đầu từ"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/DateEnd_DoanhThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:hint="Chọn ngày kết thúc"
        android:inputType="date"
        android:textStyle="bold"
        android:background="@drawable/radius_shape_15"
        android:backgroundTint="@color/DrakWhite"/>

    <Button
        android:id="@+id/Btn_ThongKeDoanhThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Thống kê"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="15dp"
        android:background="@drawable/radius_shape_18"
        app:backgroundTint="@color/main"/>

    <TextView
        android:id="@+id/KetQuaThongKe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="36sp"/>

</LinearLayout>