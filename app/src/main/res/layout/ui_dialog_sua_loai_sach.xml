<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa loại sách"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/EdtFix_MaLoaiSach"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:hint="Nhập mã loại sách: "
        android:textStyle="bold"
        android:background="@drawable/radius_shape_15"
        android:backgroundTint="@color/DrakWhite"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/EdtFix_TenLoaiSach"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:hint="Nhập tên loại sách: "
        android:textStyle="bold"
        android:background="@drawable/radius_shape_15"
        android:backgroundTint="@color/DrakWhite"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/BtnFix_LoaiSach"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Chỉnh sửa loại sách"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/radius_shape_18"
        app:backgroundTint="@color/main"/>

</LinearLayout>